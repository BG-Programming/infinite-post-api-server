{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-extra-semi": "warn",
        "no-mixed-spaces-and-tabs": "off",
        "no-useless-escape": "warn",
        "no-unexpected-multiline": "off"
    }
}
